{
  "ammo": "sfms:50arms",
  "ammo_amount": 60,
  "extended_mag_ammo_amount": [
    100,
    140,
    180
  ],
  // 指定逻辑机及相关数值的修改
  "script": "sfms:har50_logic",
  // 是否允许趴下
  "can_crawl": true,
  // 是否允许斜握（仅视觉效果）
  "can_slide": true,
  "bolt": "open_bolt",
  "rpm": 420,
  "bullet": {
    "life": 0.75,
    "bullet_amount": 1,
    "damage": 27.0,
    "tracer_count_interval": 0,
    "extra_damage": {
      "armor_ignore": 0.20,
      "head_shot_multiplier": 1.5,
      "damage_adjust": [
        {"distance": 30, "damage": 27.0},
		{"distance": 45, "damage": 21.0},
        {"distance": 80, "damage": 19.0},
        {"distance": "infinite", "damage": 16.8}
      ]
    },
    // 点燃目标
    "ignite": false,
    // 点燃时间，默认为 2 秒，仅用于实体
    "ignite_entity_time": 14,
    "speed": 300,
    "gravity": 0.0245,
    "knockback": 0,
    "friction": 0.01,
    "ignite": false,
    "pierce": 1
  },
  "reload": {
    // magazine 是弹匣供弹，manual 是手动供弹，fuel 是类燃料罐供弹（消耗一个物品填满），inventory 是消耗背包内弹药供弹（背包直读）
    "type": "magazine",
    "feed": {
      "empty": 2.8,
      "tactical": 2.8
    },
    "cooldown": {
      "empty": 4.7,
      "tactical": 3.8
    }
  },
  "draw_time": 0.96,
  "put_away_time": 0.65,
  "aim_time": 0.58,
  "sprint_time": 0.21,
  //重量
  "weight": 10.2,
  "movement_speed": {
    "base": 0.0,
    "aim": -0.55,
    "reload": -0.4
  },
  "fire_mode": [
    "auto",
    "semi"
  ],
  // 开火模式调整（如无调整可不写）
  "fire_mode_adjust": {
    // 全自动状态的数值调整，如无调整可不写
    "auto": {
      // 加算，全自动模式的开火数值调整，如无调整可不写
      "damage": 0,
      "rpm": 0,
      "speed": 0,
      "knockback": 0,
      "armor_ignore": 0,
      "head_shot_multiplier": 0,
      "aim_inaccuracy": 0,
      "other_inaccuracy": 0
    },
    // 半自动状态的数值调整，如无调整可不写
    "semi": {
      // 加算，半自动模式的开火数值调整，如无调整可不写
      "damage": 90,
      "rpm": -380,
      "speed": 60,
      "knockback": 0.1,
      "armor_ignore": 0.25,
      "head_shot_multiplier": 0.4,
      "aim_inaccuracy": -0.1,
      "other_inaccuracy": -0.5
    }
    // 多连发状态的数值调整，如无调整可不写
    // "burst": {
      // 加算，多连发模式的开火数值调整，如无调整可不写
      // "damage": 0,
      // "rpm": 0,
      // "speed": 0,
      // "knockback": 0,
      // "armor_ignore": 0,
      // "head_shot_multiplier": 0,
      // "aim_inaccuracy": 0,
      // "other_inaccuracy": 0
    // }
  },
  "recoil": {
    "pitch": [
      {"time": 0, "value": [1.18, 1.18]},
      {"time": 0.3, "value": [0.45, 0.45]},
      {"time": 0.5, "value": [-0.125, -0.125]},
      {"time": 0.65, "value": [0, 0]}
    ],
    "yaw": [
      {"time": 0, "value": [-0.35, 0.35]},
      {"time": 0.3, "value": [0.15, 0.25]},
      {"time": 0.5, "value": [0, 0]}
    ]
  },
  "inaccuracy": {
    "stand": 4.1,
    "move": 5.2,
    "sneak": 6.5,
    "lie": 5,
    "aim": 0.235
  },
  "melee": {
    // 枪械距离参数，用来延升近战攻击范围
    // 会与刺刀等配件的距离做加和
    "distance": 1,
    // 使用时的冷却时间
    "cooldown": 0.7,
    // 默认近战数据，会被配件的数据替换掉
    "default": {
      // 动画类型：没有枪托的为 melee_push，有枪托的为 melee_stock
      "animation_type": "melee_push",
      // 刺刀距离参数，枪械里还有个刺刀攻击距离参数，两者做加和
      "distance": 2,
      // 刺刀范围角度
      "range_angle": 30,
      // 伤害值
      "damage": 5.0,
      // 击退效果
      "knockback": 0.5,
      // 前摇时长，单位：秒
      "prep": 0.1
    }
  },
  "allow_attachment_types": [
    "scope",
	"laser",
    "extended_mag"
  ],
  "exclusive_attachments": {
  }
}