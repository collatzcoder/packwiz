{
  "slot": "sfms:attachment/slot/grip_rk0_ammohud",
  // 配件的默认模型，不可为空
  "model": "sfms:attachment/grip_rk0_ammohud_geo",
  // 配件默认模型使用的材质，不可为空
  "texture": "sfms:attachment/uv/grip_rk0_ammohud",
  "text_show": {
    // 作用的组名，该组的旋转点决定文本的位置和朝向
    "ammotext": {
      // 文本缩放，默认大小对于 BlockBench 里的 1
      "scale": 0.6,
      // 对齐方式：right，center，left
      "align": "right",
      // 阴影
      "shadow": false,
      // 文本颜色
      "color": "#96e800",
      // 亮度：1-15
      "light": 15,
      // 本地化，且支持PlaceholderAPI 风格的占位符
      // 目前仅支持两个：%player_name% %ammo_count%
      "text": "%ammo_count%"
    },
    "nametext":{
      "scale": 0.45,
      "align": "right",
      "shadow": false,
      "color": "#96e800",
      "light": 15,
      "text": "%player_name%"
    }
  },
  "sounds": {
    "install": "tacz:attachments/scope_general_e",
    "uninstall": "tacz:attachments/scope_general_e"
  }
}