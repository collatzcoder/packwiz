{
  "slot": "erode:attachment/slot/sight_ets108_isaac",
  // 配件的默认模型，不可为空
  "model": "erode:attachment/sight_ets108s_isaac_geo",
  // 配件默认模型使用的材质，不可为空
  "texture": "erode:attachment/uv/sight_ets108s_isaac",
  // 只有 瞄具 配件需要设置这个属性，表示瞄具的放大倍率。
  // 玩家可以在数组设置的几个倍率之间切换
  "zoom": [
    1.25,
	4.0
  ],
  // 枪械模型上的文本显示
  "text_show": {
    // 作用的组名，该组的旋转点决定文本的位置和朝向
    "ammo_text": {
      "scale": 0.14,
      // 对齐方式：right，center，left
      "align": "center",
      // 阴影
      "shadow": false,
      // 文本颜色
      "color": "#1bf4ff",
      // 亮度：1-15
      "light": 15,
      // 本地化，且支持PlaceholderAPI 风格的占位符
      // 目前仅支持两个：%player_name% %ammo_count%
      "text": "%ammo_count%"
    }
  },
  // 如果配件是瞄具，且为筒状放大瞄具，此选项应为true
  "scope": false,
  // 如果配件是瞄具，且为红点或全息瞄具，此选项应为true
  "sight": true,
  // 只有 瞄具 配件需要设置这个属性，表示开镜后，枪身和瞄具渲染的fov。
  // 默认情况下，mc 渲染手部模型的 fov 为 70。
  "fov": 30.0,
  // 音效，只在装卸配件时自己能听到
  "sounds": {
    "install": "tacz:attachments/scope_general_e",
    "uninstall": "tacz:attachments/scope_general_e"
  }
}